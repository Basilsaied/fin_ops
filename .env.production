# Production Environment Configuration
# Copy this file to .env and update the values for your production environment

# Application Environment
NODE_ENV=production

# Database Configuration
POSTGRES_DB=expense_management
POSTGRES_USER=expense_user
POSTGRES_PASSWORD=change-this-secure-password-in-production
POSTGRES_PORT=5432
DATABASE_URL=postgresql://expense_user:change-this-secure-password-in-production@database:5432/expense_management?schema=public

# Server Ports
BACKEND_PORT=5000
FRONTEND_PORT=3000

# Frontend Configuration
FRONTEND_URL=https://your-domain.com
VITE_API_URL=https://api.your-domain.com
ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_STRICT_MAX=10
REQUEST_SIZE_LIMIT=1mb
SECURITY_HEADERS_ENABLED=true
CSP_ENABLED=true

# Session & Authentication
SESSION_SECRET=generate-a-very-long-random-string-for-production-use
SESSION_TIMEOUT=1800000

# Logging Configuration
LOG_LEVEL=warn
LOG_MAX_SIZE=10m
LOG_MAX_FILES=10

# Redis Configuration (optional)
REDIS_PASSWORD=change-this-redis-password-in-production
REDIS_PORT=6379

# SSL/TLS Configuration (if using HTTPS)
SSL_CERT_PATH=/etc/ssl/certs/your-cert.pem
SSL_KEY_PATH=/etc/ssl/private/your-key.pem

# Monitoring & Health Checks
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1